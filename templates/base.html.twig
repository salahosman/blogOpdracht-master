<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>

    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
            <div class="navbar-nav ml-auto">

                <a class="nav-item nav-link active" href="/">Home</a>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('user_index') }}">Users</a>
                                <a class="dropdown-item" href="{{ path('post_new') }}">Post maken</a>
                                <a class="dropdown-item" href="{{ path('post_index') }}">Post Overzicht</a>
                            </div>
                        </div>
                    {% endif %}

                    <a class="nav-item nav-link" href="{{ path('app_logout') }}">Log uit</a>
                {% else %}
                    <a class="nav-item nav-link" href="{{ path('app_login') }}">Login</a>
                    <a class="nav-item nav-link" href="/register">Register</a>

                {% endif %}



            </div>
        </div>
    </nav>
    <div class="content">
        {% block body %}

        {% endblock %}
    </div>

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}{% endblock %}
    </body>
</html>
