{% extends 'base.html.twig' %}

{% block title %}home{% endblock %}

{% block body %}
    <section id="blog">
        <div class="container-fluid">
            <div class="row pt-lg-5">
                <div class="col-11 mx-auto">
                    <div class="card-deck">
                        {% for post in posts %}
                            <div class="card">
                                <img src="{{ vich_uploader_asset(post, 'imageFile') }}" class="card-img-top"
                                     alt="{{ post.title }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ post.title }}</h5>
                                    <p class="card-text">{{ post.body|raw }}</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted"><a href="/viewpost/{{ post.id }}" class="btn btn-primary">lees meer
                                            </a> {% if app.user %}<a
                                            href="{{ path('post_edit', {'id': post.id}) }}"><i
                                                        class="fas fa-pen text-black-50"></i>
                                            </a>{% endif %}</small>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% if app.user %}
                        <h4 ><a href="{{ path('post_new') }}"></a>nieuw</h4>
                    {% endif %}
                </div>
            </div>
        </div>

    </section>

{% endblock %}
